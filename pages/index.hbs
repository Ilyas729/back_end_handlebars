<style>
  * {
    margin: 0;
    padding: 0;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    box-sizing: border-box;
    font-size: 12px;
    color: #5a5a5a;
}

body {
    min-height: 100vh;
}

main {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 30px;
}

main.top {
    justify-content: start;
}

h1, h2, h3, h4, h5, h6 {
    font-weight: 500;
}

h6 {
    font-size: .75rem;
}

h5 {
    font-size: .9rem;
}

h4 {
    font-size: 1rem;
}

h3 {
    font-size: 2rem;
}

h2 {
    font-size: 3rem;
}

h1 {
    font-size: 3rem;
}

a {
    background-color: #4aabff26;
    padding: 5px 10px;
    color: #4aabfffe;
}

input {
    border: 1px solid #ebebeb;
    padding: 10px 20px;
    border-radius: 5px;
    outline: none;
    transition: all 0.3s ease;
}

input:focus {
    border-color: #4aaaff;
}

button {
    cursor: pointer;
    background-color: #4aaaff;
    border: 1px solid transparent;
    border-radius: 5px;
    padding: 10px 20px;
    outline: none;
    transition: all 0.3s ease;
    font-weight: 500;
    color: white;
}

button:hover {
    background-color: #429ae7;
}

button:focus {
    border-color: #4aaaff;
}

table, td, th {
    border: 1px solid #dbdbdb;
    border-collapse: collapse;
    padding: 10px;
}

th {
    background-color: #eaeaea;
}

.login {
    width: 400px;
    border: 1px solid #f1f1f1;
    border-radius: 10px;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.login.wide {
    width: 70%;
}

.row {
    display: flex;
    gap: 15px;
}

.error {
    background-color: #c5515d23;
    color: #c5515d;
    padding: 5px 10px;
    border-radius: 5px;
}
</style>

<main class="top">
        <div class="login wide">
            <h3> Clients </h3>
            <form action="/" method="post">
                <div class="row">
                    <input name="name" type="text" placeholder="Name">
                    <input name="surname" type="text" placeholder="Surname">
                    <button> Create </button>
                </div>
            </form>
    
            <table>
                <thead>
                    <tr>
                        <th> Id </th>
                        <th> Name </th>
                        <th> Surname </th>
                        <th> Actions </th>
                    </tr>
                </thead>
    
                <tbody>
                    {{#each clients}}
                    <tr>
                        <td> {{id}} </td>
                        <td> {{name}} </td>
                        <td> {{surname}}</td>
                        <td> 
                            <a href="/"> Edit </a>    
                            <a href="/delete/{{id}}"> Delete </a>    
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        
    </main>